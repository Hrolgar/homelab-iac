# Infisical Configuration
infisical_host          = "http://your-infisical-ip:81"
infisical_client_id     = "your-client-id"
infisical_client_secret = "your-client-secret"
infisical_project_id    = "your-project-id"

# Cloudflare Domains
cloudflare_domains = ["example.com", "mysite.com"]

# B2 Buckets
buckets = {
  "my-backups" = {
    region                  = "eu-central-003"
    store_keys_in_infisical = true
  }
  "media-archive" = {
    region                    = "eu-central-003"
    days_to_keep_old_versions = 10
  }
}

# Cloudflare Tunnels
tunnels = {
  "homeassistant" = {
    routes = {
      "ha" = {
        domain  = "example.com"
        service = "http://192.168.1.10:8123"
      }
    }
  }
  "services" = {
    routes = {
      "portainer" = {
        domain        = "example.com"
        service       = "https://192.168.1.20:9443"
        no_tls_verify = true
      }
    }
  }
}

# Cloudflare Access (Zero Trust)
access_apps = {
  "Portainer" = {
    domain        = "example.com"
    subdomain     = "portainer"
    allowed_email = "your-email@example.com"
  }
}

# GitHub Configuration
github_owner = "your-github-username"

github_repos = {
  # Existing repo (import first)
  "my-project" = {
    description            = "My existing project"
    visibility             = "public"
    topics                 = ["terraform", "automation"]
    has_issues             = true
    has_wiki               = false
    delete_branch_on_merge = true
    protect_default_branch = true  # Only works on public repos (free plan)
  }

  # New repo
  "new-project" = {
    description        = "A new project"
    visibility         = "private"
    auto_init          = true
    gitignore_template = "Python"
    license_template   = "mit"
    topics             = ["python"]
    collaborators = {
      "friend-username" = "push"
    }
  }
}